{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "preserve",
    "lib": ["es2020", "dom"],
    "baseUrl": ".",
    "module": "ES2020",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"],
      "~~/*": ["../*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
